{
  "name": "influxdb-tg-bot",
  "version": "0.0.1",
  "description": "Telegram bot for InfluxDB.",
  "author": "iiroki",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "npm run build && NODE_ENV=development nodemon --exec 'ts-node' --signal SIGINT src/index.ts",
    "build": "tsc",
    "build:prod": "tsc && npm prune --omit=dev"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "telegraf": "^4.11.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.14.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
